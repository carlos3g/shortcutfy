{
  "author": "carlos3g",
  "description": "Custom shortcuts in your browser",
  "manifest_version": 3,
  "name": "Shortcutfy",
  "version": "1.0.0",
  "background": {
    "service_worker": "./service-worker.js",
    "type": "module"
  },
  "permissions": ["activeTab", "tabGroups", "tabs"],
  "action": {},
  "commands": {
    "tab-previous": {
      "description": "Select previous tab"
    },
    "tab-next": {
      "description": "Select next tab"
    },
    "tab-move-to-previous": {
      "description": "Move current tab left"
    },
    "tab-move-to-next": {
      "description": "Move current tab right"
    },
    "tab-move-to-first": {
      "description": "Move current tab to first"
    },
    "tab-move-to-last": {
      "description": "Move current tab to last"
    },
    "tab-reload": {
      "description": "Reload tab"
    },
    "tab-duplicate": {
      "description": "Duplicate current tab"
    },
    "tab-pin": {
      "description": "Pin / Unpin current tab"
    },
    "tab-mute": {
      "description": "Mute / Unmute current tab"
    },
    "tab-close": {
      "description": "Close current tab"
    },
    "tab-create-new": {
      "description": "Create new tab"
    },
    "tab-go-back": {
      "description": "Go back"
    },
    "tab-go-forward": {
      "description": "Go forward"
    },
    "window-new": {
      "description": "Create new window"
    },
    "window-new-incognito": {
      "description": "Create new incognito window"
    },
    "open-extensions": {
      "description": "Open Extensions"
    },
    "open-extensions-shortcuts": {
      "description": "Open Extension Shortcuts"
    },
    "open-downloads": {
      "description": "Open Chrome Downloads"
    },
    "open-settings": {
      "description": "Open Chrome Settings"
    },
    "open-history": {
      "description": "Open Chrome History"
    },
    "open-bookmarks": {
      "description": "Open Chrome Bookmarks"
    },
    "open-help": {
      "description": "Open Chrome Help"
    },
    "open-flags": {
      "description": "Open Chrome Flags"
    },
    "tab-new-in-group": {
      "description": "Create new tab in current group"
    }
  }
}
